{
    "plugins": [
        "@stylistic"
    ],
    "rules": {
        "@stylistic/indent": [
            "error",
            4
        ],
        "@stylistic/quotes": [
            "error",
            "single"
        ],
        "@stylistic/semi": [
            "error",
            "always"
        ],
        "no-unused-vars": "off",
        "no-console": "off",
        "no-undef": "off",
        "no-case-declarations": "off"
    }
}
